void setup() {                  // Initialization
  Serial.begin(19200);          //The USB interface on board (to receive commands from PC)
  Serial1.begin(19200);         //The Rx-Tx on board
  Wire.begin();                 //I2C bus for DAC interface  
  i2cbuffer[0]=0x40;            // B01000000 for write mode in I2C
  delay(100);                   // Buffer delay of 100 ms
}

void loop() {  
  if(Serial.available()>2)      //More than 2 bytes have been latched at the serial communication buffer 
  {
    Serial.readBytesUntil(endMark,serialbuf,length);    // Read continuously (ideally this should terminate at the third byte itself,
    //                                                     the third byte will be the endMarker)
    freqf=(int)serialbuf[0];                            // Obtain the decimation factor
    typ=(unsigned char)serialbuf[1];                    // Obtain waveform type
  }
  val=Wav[typ-1][i];                                    // Pick samples from the appropriate waveform
  i=(i+freqf)%120;                                      // Update index in circular fashion with decimation
  i2cbuffer[1]=val>>4;                                  // Most significant 8 bytes of sample
  i2cbuffer[2]=val<<4;                                  // Least significant 4 bytes of sample

  Wire.beginTransmission(DAC);  // Begin I2C transmission
  Wire.write(i2cbuffer[0]);     // Write Byte 1 (Control)
  Wire.write(i2cbuffer[1]);     // Write Byte 2 (MSB)
  Wire.write(i2cbuffer[2]);     // Write Byte 3 (LSB)
  Wire.endTransmission();       // End serial transmission
}
